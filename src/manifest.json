{
  "name": "altshift",
  "manifest_version": 2,
  "description": "Change audio tracks for videos",
  "short_name": "altshift",
  "version": "0.01",
  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "img/logo1.png",
    "default_title": "altshift"
  },
  "content_scripts": [{
    "matches": [
      "https://www.netflix.com/*",
      "https://www.youtube.com/*"
    ],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [
    "img/*.png",
    "content.js",
    "bundle.css",
    "fonts/*.*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "http://127.0.0.1:5010/*",
    "https://*.typekit.net/*",
    "https://*.googleapis.com/*"
  ]
}
