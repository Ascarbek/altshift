{
  "name": "altshift",
  "manifest_version": 3,
  "description": "Play voice overs for youtube videos",
  "short_name": "altshift",
  "version": "1.02",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "img/logo1.png",
    "default_title": "altshift"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.altshift.cc/*",
    "https://*.googleapis.com/*"
  ]
}
